{
    "$id": "https://lpb.luxonis.com/schema/NodeConnection.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Node Connection schema",
    "description": "Specifies a connection between nodes IOs",
    "type": "object",
    "required": ["node1Id", "node2Id", "node1Output", "node2Input"],
    "properties": {
        "node1Id": {
            "$ref": "NodeId.schema.json"
        },
        "node2Id": { 
            "$ref": "NodeId.schema.json"
        },
        "node1Output": {
            "type": "string",
            "minLength": 1
        },
        "node2Input": {
            "type": "string",
            "minLength": 1
        }
    }
}